    <div id="contact" class="container mb-5">
        <h1 class="mb-4" align="center">Contact Us</h1>
        <form>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="name" class="form-control" placeholder="Enter Nane">
            </div>
            <div class="form-group mt-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" placeholder="Enter Email">
                <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group mt-3">
                <label for="message">Message</label>
                <input type="message" class="form-control" placeholder="Enter Message">
            </div>
            <button type="button" class="btn btn-primary mt-4">Send</button><br>
            <small id="reply" class="form-text text-muted">We'll reply withing 3 business days.</small>
        </form> 
